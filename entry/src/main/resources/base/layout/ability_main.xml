<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    xmlns:app="http://schemas.huawei.com/hap/res-auto"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical">

        <com.github.stkent.amplify.prompt.DefaultLayoutPromptView
            ohos:id="$+id:default_layout_prompt_view_no_customization"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:bottom_margin="5vp"/>

        <com.github.stkent.amplify.prompt.DefaultLayoutPromptView
            ohos:id="$+id:default_layout_prompt_view_code_config"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:bottom_margin="5vp"/>

        <com.github.stkent.amplify.prompt.DefaultLayoutPromptView
            ohos:id="$+id:default_layout_prompt_view_xml_config"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:bottom_margin="5vp"
            app:prompt_view_text_size="60"
            app:prompt_view_button_corner_radius="30"
            app:prompt_view_subtitle_text_color="red"
            app:prompt_view_title_text_color = "red"
            app:prompt_view_background_color = "#33FF00"
            app:prompt_view_foreground_color="#33FF00"
            app:prompt_view_positive_button_background_color="#FF9900"
            app:prompt_view_positive_button_text_color="#FFFFFF"
            app:prompt_view_negative_button_background_color="#FF9900"
            app:prompt_view_negative_button_text_color= "#FFFFFF"
            app:prompt_view_critical_feedback_question_negative_button_label="12. No"
            app:prompt_view_critical_feedback_question_positive_button_label="11. Yes"
            app:prompt_view_critical_feedback_question_subtitle="10. Critical Feedback Subtitle"
            app:prompt_view_critical_feedback_question_title="9. Critical Feedback Title"
            app:prompt_view_positive_feedback_question_negative_button_label="8. No"
            app:prompt_view_positive_feedback_question_positive_button_label="7. Yes"
            app:prompt_view_positive_feedback_question_subtitle="6. Positive Feedback Subtitle"
            app:prompt_view_positive_feedback_question_title="5. Positive Feedback Title"
            app:prompt_view_thanks_subtitle="14. Thanks Subtitle"
            app:prompt_view_thanks_title="13. Thanks Title"
            app:prompt_view_user_opinion_question_negative_button_label="4. No"
            app:prompt_view_user_opinion_question_positive_button_label="3. Yes"
            app:prompt_view_user_opinion_question_subtitle="2. User Opinion Subtitle"
            app:prompt_view_user_opinion_question_title="1. User Opinion Title"
            app:prompt_view_thanks_display_time_ms="20000"/>

        <com.github.stkent.amplify.prompt.CustomLayoutPromptView
            ohos:id="$+id:custom_layout_prompt_view_code_config"
            ohos:width="match_parent"
            ohos:height="match_content"/>

    </DirectionalLayout>

</DirectionalLayout>


