<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="red"
    ohos:bottom_margin="10vp">
    <Text
        ohos:id="$+id:amplify_title_text_view"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:margin="16fp"
        ohos:text_size="20fp"
        ohos:text_color="white"
        ohos:layout_alignment="horizontal_center"/>
    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:left_margin="0"
        ohos:right_margin="0"
        ohos:bottom_margin="10vp"
        ohos:orientation="horizontal"
        ohos:alignment="horizontal_center">
        <Button
            ohos:id="$+id:amplify_negative_button"
            ohos:width="130vp"
            ohos:height="match_content"
            ohos:text_size="20fp"
            ohos:background_element="white"
            ohos:layout_alignment="center"
            ohos:text_color="red"/>
        <Component
            ohos:height="match_parent"
            ohos:width="40fp"/>
        <Button
            ohos:id="$+id:amplify_positive_button"
            ohos:width="130vp"
            ohos:height="match_content"
            ohos:text_size="20fp"
            ohos:background_element="white"
            ohos:layout_alignment="center"
            ohos:text_color="red"/>
    </DirectionalLayout>
</DirectionalLayout>
